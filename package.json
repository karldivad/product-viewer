{
  "name": "root",
  "private": true,
  "description": "Repository containing <product-viewer> packages",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --stream",
    "build": "lerna run build --stream",
    "build:dev": "lerna run build:dev --stream",
    "publish-packages": "lerna publish",
    "start": "lerna bootstrap && npm run build:dev --stream && cd packages/viewer-demos && npm run start",
    "serve-viewer": "cd packages/product-viewer && npm run start"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2"
  }
}
