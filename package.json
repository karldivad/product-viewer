{
  "name": "root",
  "private": true,
  "description": "Repository containing <product-viewer> packages",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "build": "lerna run build --stream",
    "build:dev": "lerna run build:dev --stream",
    "publish-packages": "lerna publish",
    "start": "lerna bootstrap && npm run build:dev --stream && cd packages/viewer-demos && npm run start",
    "serve-viewer": "cd packages/product-viewer && npm run start",
    "lint": "lerna run lint --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/config-lerna-scopes": "^13.1.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "symlink-dir": "^5.0.1"
  }
}
